{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["NODE_ENV", "CI"],

  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "env": ["NODE_ENV"]
    },

    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },

    "test": {
      "dependsOn": ["build"],
      "inputs": ["$TURBO_DEFAULT$", "**/*.test.ts", "**/*.test.tsx"],
      "outputs": ["coverage/**"],
      "env": ["CI"]
    },

    "test:watch": {
      "cache": false,
      "persistent": true
    },

    "lint": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "eslint.config.*"],
      "outputs": []
    },

    "lint:fix": {
      "dependsOn": ["^build"],
      "cache": false
    },

    "format": {
      "outputs": [],
      "cache": false
    },

    "format:check": {
      "inputs": ["$TURBO_DEFAULT$", ".prettierrc*"],
      "outputs": []
    },

    "typecheck": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "tsconfig.json"],
      "outputs": []
    },

    "clean": {
      "cache": false
    },

    "db:migrate": {
      "cache": false
    },

    "db:seed": {
      "cache": false,
      "dependsOn": ["db:migrate"]
    }
  }
}
